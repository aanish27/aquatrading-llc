---
export interface Props {
  title: string;
  thumbnail: string;

}

const { title, thumbnail } = Astro.props;
---

<article class='w-full max-h-[25rem] overflow-hidden relative group'>
  <div class='flex items-center absolute right-4 top-4 z-10'>
  </div>
    <img
      src={thumbnail}
      class='w-full h-auto scale-100 hover:scale-110 transition duration-[1.5s]'
      loading='lazy'
      width='100%'
      height='100%'
      alt='featureImage'
    />
  <div class='absolute w-full bottom-0 left-0 backdrop-blur-md dark:text-white text-white bg-black/50 p-4'>
    <h3 class='mr-2 text-xl'>{title}</h3>
  </div>
</article>
