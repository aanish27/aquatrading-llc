---
import Container from '../shared/Container.astro';
---

<section class='pb-20 bg-gray-1 dark:bg-dark-2 overflow-hidden'>
  <Container>
    <div
      class='w-full relative py-8 md:py-10 px-6 md:px-8 rounded-2xl dark:bg-white bg-black'
    >
      <div class='absolute right-0 top-0 h-full w-full flex justify-end'>
        <div class='w-28 h-28 overflow-auto flex rounded-xl relative blur-2xl'>
          <span
            class='absolute w-16 h-16 -top-1 -right-1 bg-green-500 rounded-md rotate-45'
          ></span>
          <span
            class='absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rounded-md rotate-45'
          ></span>
          <span
            class='absolute w-16 h-16 -bottom-1 -left-1 bg-primary rounded-md rotate-45'
          ></span>
        </div>
      </div>

      <div class='absolute left-0 bottom-0 h-full w-full flex items-end'>
        <div class='w-28 h-28 overflow-auto flex rounded-xl relative blur-2xl'>
          <span
            class='absolute w-16 h-16 -top-1 -right-1 bg-yellow-500 rounded-md rotate-45'
          ></span>
          <span
            class='absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rounded-md rotate-45'
          ></span>
          <span
            class='absolute w-16 h-16 -bottom-1 -left-1 bg-primary rounded-md rotate-45'
          ></span>
        </div>
      </div>
      <div class='flex flex-wrap justify-center -mx-4'>
        <div class='w-full px-4'>
          <div class='mx-auto text-center'>
            <div class='text-red-600 text-5xl font-extrabold'>
              Free on-site assessment with just one phone call
            </div>
            <div class='text-yellow-300 text-2xl font-extrabold'>
              No need to Visit the store on site estimate
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>
