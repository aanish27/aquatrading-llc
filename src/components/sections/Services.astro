---
import Container from '../shared/Container.astro';
import Paragraph from '../shared/Paragraph.astro';
import Title from '../shared/Title.astro';
import VehicleCard from '../shared/VehicleCard.astro';

const vehicles = [
  {
    title: 'Social media marketing',
    thumbnail: 'images/webuy/img1.jpeg',
  },
  {
    title: 'Amazon affiliate marketing',
    thumbnail: 'images/webuy/img2.jpeg',
  },
  {
    title: 'Email marketing',
    thumbnail: 'images/webuy/img3.jpeg',
  },
  {
    title: 'Social media marketing',
    thumbnail: 'images/webuy/img4.jpeg',
  },
  {
    title: 'Amazon affiliate marketing',
    thumbnail: 'images/webuy/img5.jpeg',
  },
  {
    title: 'Email marketing',
    thumbnail: 'images/webuy/img6.jpeg',
  },
];
---

<section id='services'>
  <Container className='space-y-10 md:sapce-y-12'>
    <div class='text-center max-w-3xl mx-auto space-y-4'>
      <Title> What We Buy </Title>
      <Paragraph>
        We purchase all types of cars, regardless of their condition:
      </Paragraph>
    </div>
    <div class='grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8'>
      {
        vehicles.map((vehicle) => {
          return (
            <VehicleCard title={vehicle.title} thumbnail={vehicle.thumbnail} />
          );
        })
      }
    </div>
    <div class='grid md:grid-cols-2 grid-cols-1 gap-4 my-16'></div>
  </Container>
</section>
